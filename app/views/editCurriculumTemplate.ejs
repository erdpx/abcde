<input autofocus type="text" class="curriculum-title-form" name="curriculumTitle" placeholder="curriculum title" value="<%= curriculum.curriculumTitle %>"/>
<% if (curriculum.curriculumExplanation != undefined) {%>
    <textarea class="curriculum-textarea" name="curriculumExplanation"><%= curriculum.curriculumExplanation %></textarea>
<% } else { %>
    <textarea class="curriculum-textarea" name="curriculumExplanation" placeholder="curriculum explanation"></textarea>
<% } %>

<div id="curriculum-sections">
<% var counter = 0; %>
<% curriculum.curriculumSections.forEach(c => { %>
<div class="curriculum-section" name="curriculumSection<%= counter %>">
<input type="text" class="section-title" name="sectionTitle" placeholder="Section Title" value="<%= c.sectionTitle %>"/>

<% if (c.sectionExplanation) { %>
    <textarea class="section-textarea" name="sectionExplanation<%= counter %>" placeholder="section explanation"><%= c.sectionExplanation %></textarea>
<% } else { %>
    <textarea class="section-textarea" name="sectionExplanation<%= counter %>" placeholder="section explanation"></textarea>
<% } %>

 <% for(let i = 0; i < c.content.length; i++) { %>
    <% if (c.contentLink[i] !== undefined)  { %>
        <input type="text" class="section-content" name="sectionContent<%= counter %>" placeholder="content" value="<%= c.content[i] %>"/>
        <input type="text" class="content-link" name="contentLink<%= counter %>" placeholder="content link" value="<%= c.contentLink[i] %>"/>
    <% }} %>
        <input type="text" class="section-content" name="sectionContent<%= counter %>" placeholder="content"/>
        <input type="text" class="content-link" name="contentLink<%= counter %>" placeholder="content link"/>
</div>
<% counter++ %>
<% }) %>

</div>
<button type="button" id="new-section-btn">create new section</button>
<button type="button" id="submit-curriculum">submit curriculum</button>
</form>

<% include templateFooter.ejs %>